.ui.small.menu
  = link_to 'Home', root_path, class: "item"
  = link_to 'Messages', messages_path, class: "item", data: { turbolinks: false }
  = link_to 'Friends', friends_path, class: "item"  
  = link_to 'Users', users_path, class: "item"  
  .right.menu
    - if user_signed_in?
      %a#navbarDropdownMenuLink.ui.item.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "javascript:void(0)"}
        Settings
      .dropdown-menu{"aria-labelledby" => "navbarDropdownMenuLink"}
        %div.item{:href => "javascript:void(0)"} #{current_user.name}
        = link_to 'Edit Profile', edit_user_registration_path, class: "item"
        = link_to "logout", destroy_user_session_path, class: "item", method: :delete
    - else
      = link_to "Sign Up", new_user_registration_path, class: "item", method: :get  
