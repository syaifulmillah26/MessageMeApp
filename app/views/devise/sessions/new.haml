=render "layouts/menus"
.container-fluid
  .ui.segment
    = render 'layouts/flash_message'
    .card-body.p-0
      / Nested Row within Card Body
      .row
        .col-lg-12.d-flex.justify-content-center
          .p-5
            .text-center
              %h1.h4.text-gray-900.mb-4 Welcome Back!
            = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "user"} ) do |f|
              .form-group
                = f.email_field :email, class: 'form-control form-control-user', autofocus: true, autocomplete: "email", placeholder: 'Email'
              .form-group
                = f.password_field :password, class: 'form-control form-control-user', autocomplete: "current-password", placeholder: 'Password'
              - if devise_mapping.rememberable?
                .form-group
                  = f.check_box :remember_me
                  = f.label :remember_me
              .form-group
                = f.submit "Log in", class: 'btn btn-outline-primary btn-user btn-block'
              %hr/
              .text-center
                %a.small{:href => "#"} Forgot Password?
